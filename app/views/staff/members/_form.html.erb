 <%= form_for [:staff, @member] do |f| %>
  <!-- Check if there were any errors saving course and display them if so -->
  <% if @member.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited
          this admin from being saved:</h2>
      <ul>
        <% @member.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Begin rendering the form -->
  <div class= 'form-group'>
    <%= f.label :first_name, 'First Name:' %><br>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>  
  <div class= 'form-group'>
    <%= f.label :last_name, 'Last Name:' %><br>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :email, 'Email:' %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
 
  <%= f.submit 'Submit', class: 'btn btn-primary' %> 
  
  <%= link_to 'Back', staff_base_admin_path, class: 'btn btn-danger' %>
<% end %>