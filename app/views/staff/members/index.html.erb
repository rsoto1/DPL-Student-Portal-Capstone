<%- page_header 'Staff Members' %>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.email %></td>
        <td><%= link_to 'View', [:staff, member], class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Edit', edit_staff_member_path(member), class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Delete', [:staff, member], class: 'btn btn-xs btn-default', method: :delete, 
                                            data: { 
                                                  confirm: 'Are you sure you ' \
                                                           'want to delete this course?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Staff Member', new_staff_member_path, class: 'btn btn-xs btn-primary' %>
