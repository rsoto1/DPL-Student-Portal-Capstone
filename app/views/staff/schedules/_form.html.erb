<%= form_for [:staff, @cohort, @schedule] do |f| %>
<% if @schedule.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited
          this schedule from being saved:</h2>
      <ul>
        <% @schedule.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Begin rendering the form -->
  <div class= 'form-group'>
    <%= f.label :day, 'Day' %><br>
    <%= f.select :day, [['Monday'],
                             ['Tuesday'],
                             ['Wednesday'],
                             ['Thursday'],
                             ['Friday'], 
                             ['Saturday']],
                            class: 'form-control input-lg' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :description, 'Description' %><br>
    <%= f.text_area :description, placeholder: 'Description', class: 'form-control input-lg' %>
  </div>  
 


  <%= f.submit 'Submit', class: 'btn btn-primary' %> 
  
  <%= link_to 'Back', staff_cohort_schedules_path, class: 'btn btn-primary' %><br><br>
<% end %>

