<div class="row">
<div class="col-lg-12">

  <div class="col-md-6">
   <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Leader Board
        </h3>
      </div>
      <div class="panel-body">           
        Bill  - 500 points<br>
        Ann - 450 points<br>
        John 400 points<br>
       <!-- This is just a placeholder -->
      </div>
    </div>
  </div> 

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          My Assignments
        </h3>
        </div>
        <div class="panel-body">           
          <% @assignments.each do |assignment| %>
          <td><%= link_to assignment.name, dashboard_assignment_path(assignment) %></td>
          <td><%= assignment.category %></td>
          <td><%= assignment.due_date.to_s(:long_ordinal) %><br><% end %></td>
        </div>
    </div>
  </div>

    <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          My To Do List
        </h3>
      </div>
        <div class="panel-body"> 
          <%= link_to 'Add a New To Do Item', new_dashboard_todo_path, class: 'btn btn-xs btn-primary' %><br><br>
            <ul>
              <% @todos.each do |todo| %>
                <li><%= todo.item %>

                  <span class="pull-right">
                  <%= link_to "x" , dashboard_todo_path(todo), method: :delete, 
                                                data: { 
                                                        confirm: 'Are you sure you ' \
                                                               'want to delete this item?' } %>
                  </span>
                </li> 
              <% end %>
            </ul>
        </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Weekly Schedule
        </h3>
        </div>
        <div class="panel-body">    
              <% @schedules.each do |schedule| %>
              <%= schedule.day %>:
              <%= schedule.description%><br>
            <% end %>       
        </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          News
        </h3>
        </div>
        <div class="panel-body">           
          <%= link_to 'Reddit', 'http://reddit.com' %><br>
          <%= link_to 'Tech Crunch', 'http://techcrunch.com' %><br>
          <%= link_to 'CNET', 'http://www.cnet.com/news/' %><br>
        </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Calendar of Events
        </h3>
        </div>
        <div class="panel-body1">           
          <%= image_tag "calendar.jpg" %>  
          <!-- This is just a placeholder  -->
        </div>
    </div>
  </div>
</div>
</div>


  

    

   

  