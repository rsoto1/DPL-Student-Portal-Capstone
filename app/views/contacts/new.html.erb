<div>
  <h3 align="center">Send Us A Message</h3>

  <%= form_for @contact do |f| %>
  <div class= 'form-group'>
    <%= f.label :name, 'Name:' %><br>
    <%= f.text_field :name, :required => true, class: 'form-control input-lg' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :email, 'Email:' %><br>
    <%= f.email_field :email, :required => true, class: 'form-control input-lg' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :message, 'Message:' %><br>
    <%= f.text_area :message, :as => :text, :required => true, class: 'form-control input-lg' %>
  </div>
    <div class= "hidden">
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.submit 'Send message', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>